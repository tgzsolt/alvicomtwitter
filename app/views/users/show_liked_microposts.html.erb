<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
       <% if current_user?(@user) %>  
        <strong id="likes" class="stat">
     <% else %>
        <strong id="otheruser_likes" class="stat">
         <% end %>            
          <%= @user.liked_microposts.count %>
        </strong>
        likes
    </section>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @liked_microposts.any? %>
      <ul class="microposts">
        <%= render @liked_microposts %>
      </ul>
      <%= will_paginate @liked_microposts %>
    <% end %>
  </div>
</div>